<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context=".Perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingTop="40dp"
        android:paddingRight="36dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUsuario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnEditarCuenta"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="39dp"
            android:backgroundTint="@color/btnGris"
            android:drawableRight="@android:drawable/ic_menu_set_as"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/btnEditarCuenta"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:strokeColor="@color/contornoGris" />


        <Button
            android:id="@+id/idiomaIngles"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="23dp"
            android:backgroundTint="@color/btnGris"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/activar_idioma_ingles"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:strokeColor="@color/contornoGris" />

        <Button
            android:id="@+id/idiomaEspanol"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="23dp"
            android:backgroundTint="@color/btnGris"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/activar_idioma_espa_ol"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:strokeColor="@color/contornoGris" />


        <Button
            android:id="@+id/btnCerrarSesion"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="23dp"
            android:backgroundTint="@color/btnGris"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/btnCerrarSesion"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:strokeColor="@color/contornoGris" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>