<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/gray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MantMascotaActivity">


        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <!--foto y seleccion-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMascotaImage"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:clipToOutline="true"
                android:minHeight="50dp"
                tools:srcCompat="@drawable/user"/>

            <ImageButton
                android:id="@+id/ibSelecionarImagen"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="saludo"
                app:srcCompat="@drawable/btnimg" />
        </LinearLayout>

        <!--nombre-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="@string/nombre_mascota"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etNombreMascota"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="330dp"
            android:height="40dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFAFA"
            android:paddingLeft="15dp"
            tools:text="Hola" />

        <!--tipo-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tipo"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etTipo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="330dp"
            android:height="40dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFAFA"
            android:paddingLeft="15dp"
            tools:text="Hola"
            />

        <!--raza-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/raza"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etRaza"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="330dp"
            android:height="40dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFAFA"
            android:paddingLeft="15dp"
            tools:text="Hola"
            />

        <!--sexo-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sexo"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etSexo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="330dp"
            android:height="40dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFAFA"
            android:paddingLeft="15dp"
            />

        <!--fecha nacimiento-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_nacimiento"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etFechaNacimiento"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFAFA"
            android:layout_gravity="center_horizontal"
            android:inputType="date"
            android:paddingLeft="15dp"
            android:clickable="false"
            android:focusable="false"
            tools:text="Hola" />


        <!--descripcion-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Descripcion"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFAFA"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:paddingLeft="15dp"
            tools:text="Hola" />

        <!--botones-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <android.widget.Button
                android:id="@+id/btRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_rounded_corner"
                android:backgroundTint="@color/pink"
                android:minWidth="226dp"
                android:text="@string/guardar"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_corner"
                android:backgroundTint="@color/brown"
                android:minWidth="226dp"
                android:text="@string/cancelar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
