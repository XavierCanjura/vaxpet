<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCitas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!-- checkboxs -->
            <CheckBox
                android:id="@+id/chkbaño"
                android:layout_width="209dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/bath"
                android:text=" Baño" />
            <CheckBox
                android:id="@+id/chkCorte"
                android:layout_width="209dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/corte"
                android:text=" Corte de cabello" />
            <CheckBox
                android:id="@+id/chkVacunas"
                android:layout_width="209dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/vacuna"
                app:srcCompat="@drawable/calendar"
                android:text=" Vacunas" />
            <CheckBox
                android:id="@+id/chkDesparacitacion"
                android:layout_width="209dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/desparacitacion"
                android:text=" Desparacitación" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/naranja"
            android:orientation="vertical"
            android:padding="16dp">

            <!--fecha-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagecalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/calendar" />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:text="05/12/2023"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--fecha-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagereloj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/reloj" />

                <TextView
                    android:id="@+id/hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="5dp"
                    android:text="10:00 am"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>